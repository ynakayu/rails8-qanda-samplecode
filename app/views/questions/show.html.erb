<h1>Show</h1>
<p>
  Title: <br>
  <%= @question.title %>
</p>
<p>
  Name: <br>
  <%= @question.name %>
</p>
<p>
  Content: <br>
  <%= @question.content %>
</p>

<h2>Add an answer</h2>
<%= form_with model: [@question, @question.answers.build] do |form| %>
  <div>
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>
  <div>
    <%= form.label :content %>
    <%= form.text_area :content %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>

<%= link_to 'top', questions_path %>